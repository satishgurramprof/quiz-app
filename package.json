{
  "name": "quiz-app",
  "version": "1.0.0",
  "description": "A sample quiz application with Node.js and Express",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "echo 'Building quiz-app...' && node -c src/index.js && echo 'Build successful!'",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "coverage:report": "jest --coverage --coverageReporters=html --detectOpenHandles --forceExit && open coverage/index.html"
  },
  "keywords": [
    "quiz",
    "nodejs",
    "express",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "jest": "^29.5.0",
    "supertest": "^6.3.3"
  }
}
